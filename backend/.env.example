# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True

# Database
# Note: On macOS with Homebrew, the default PostgreSQL user is your system username
# You can leave DB_PASSWORD empty if your PostgreSQL user has no password (common on local dev)
DB_NAME=farmer_market_pool
DB_USER=Macbook
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# M-Pesa (Sandbox)
MPESA_CONSUMER_KEY=your-consumer-key
MPESA_CONSUMER_SECRET=your-consumer-secret
MPESA_SHORTCODE=your-shortcode
MPESA_PASSKEY=your-passkey
MPESA_ENVIRONMENT=sandbox

# Platform Settings
PLATFORM_COMMISSION_RATE=0.05
PRICE_FLOOR_PERCENTAGE=0.10
